<div
  x-data="{ loginForm: true, pwRecoverForm: false }"
  class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8"
>
  <div x-show="loginForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label class="sr-only" for="email_address">Email address</label>
          <input
            class="relative block w-full px-3 py-2 border"
            id="email_address"
            type="email"
            name="customer[email]"
            autocomplete="email"
            placeholder="Email address"
          >
        </div>
        {% if form.password_needed %}
          <div class="my-2">
            <label class="sr-only" for="password">Password</label>
            <input
              class="relative block w-full px-3 py-2 border"
              id="password"
              type="password"
              name="customer[password]"
              autocomplete="current-password"
              placeholder="Password"
            >
          </div>
        {% endif %}

        <div class="my-2 text-sm">
          <a
            x-on:click="loginForm = false; pwRecoverForm = true"
            class="underline text-gray-500 hover:text-gray-900"
            href="#"
          >
            Forgot your password?
          </a>
        </div>
        <div>
          <button
            class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900"
            type="submit"
          >
            Sign in
          </button>
        </div>
      {% endform %}
    </div>

    {% if shop.checkout.guest_login %}
      <hr class="my-12">

      <div>
        <h1 class="mt-6 text-center text-3xl font-bold">Continue as a guest</h1>
      </div>

      {% form 'guest_login' %}
        <div>
          <button
            class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900"
            type="submit"
          >
            Continue
          </button>
        </div>
      {% endform %}
    {% endif %}
  </div>
  <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Recover your password</h1>
    </div>
    <div class="mt-8">
      {% form 'recover_customer_password' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label class="sr-only" for="email">Email address</label>
          <input
            class="relative block w-full px-3 py-2 border"
            id="email"
            type="email"
            name="email"
            autocomplete="email"
            placeholder="Email address"
          >
        </div>

        <div>
          <button
            class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900"
            type="submit"
          >
            Recover password
          </button>
        </div>

        <div class="mt-8 text-sm">
          <a
            x-on:click="loginForm = true; pwRecoverForm = false"
            class="underline text-gray-500 hover:text-gray-900"
            href="#"
            >Back to login</a
          >
        </div>
      {% endform %}
    </div>
  </div>
</div>
